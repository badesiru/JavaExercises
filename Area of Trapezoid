//Area of a Trapezoid Program

import java.util.Scanner; 
class Main {
  public static void main(String[] args) {
    Scanner input = new Scanner(System.in);
    System.out.println("Please enter the two bases and the height! (in centimeters)");
    double base1 = input.nextInt();
    double base2 = input.nextInt();
    double height = input.nextInt();
    double area = 0.5 * (base1 + base2) * height;
    //double firstCalculation = base1 + base2;
    //double secondCalculation = firstCalculation * .5;
    //double finalCalculation = secondCalculation * height;

    System.out.println("The area of this trapezoid is " + area + " centimeters");

  }
}
